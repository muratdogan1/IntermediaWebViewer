@{
  Layout = null;
  var err = ViewBag.Err as string;
  var returnUrl = ViewBag.ReturnUrl as string;
}

<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login</title>
  <link rel="stylesheet" href="~/css/oviyam.css" />
</head>
<body>
  <div class="ov-shell">
    <div class="ov-card" style="max-width:420px;margin:60px auto;">
      <div class="ov-topbar">
        <div>
          <span class="ov-brand">interMEDIA</span>
          <span class="ov-sub">Login</span>
        </div>
      </div>

      <div class="ov-content">
        @if (!string.IsNullOrWhiteSpace(err))
        {
          <div style="color:#ffb3b3;margin-bottom:12px">@err</div>
        }

        <form method="post" asp-action="Login">
          @Html.AntiForgeryToken()
          <input type="hidden" name="returnUrl" value="@returnUrl" />

          <div style="display:flex;flex-direction:column;gap:6px;margin-bottom:10px">
            <label style="color:#bdbdbd;font-size:12px">Kullanıcı Adı</label>
            <input name="username" autocomplete="username"
                   style="height:38px;border-radius:8px;border:1px solid rgba(255,255,255,.08);background:#0f1113;color:#ddd;padding:0 10px" />
          </div>

          <div style="display:flex;flex-direction:column;gap:6px;margin-bottom:14px">
            <label style="color:#bdbdbd;font-size:12px">Şifre</label>
            <input name="password" type="password" autocomplete="current-password"
                   style="height:38px;border-radius:8px;border:1px solid rgba(255,255,255,.08);background:#0f1113;color:#ddd;padding:0 10px" />
          </div>

          <button class="btn btn-primary" type="submit" style="width:100%">Giriş</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>